<Window x:Class="GameWIndowTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWIndowTest1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Character1 -->
        <Rectangle x:Name="Character1"
                   Tag="Character"
                   Margin="50,60,670,200"
                   Fill="Blue"
                   >
            <Rectangle.ContextMenu>
                <ContextMenu>
                    <MenuItem Tag="Character1" Header="Show Character Details" Click="Show_Character_Click"/>
                    <MenuItem Tag="Character1" Header="List Abilities" Click="Show_Character_Click"/>
                    <MenuItem Tag="Character1" Header="Change Colour" Click="Show_Character_Click"/>
                </ContextMenu>
            </Rectangle.ContextMenu>
        </Rectangle>
        <Rectangle Name="Character1_Identifier" HorizontalAlignment="Left" Height="21" Margin="70,34,640,200" Stroke="Black" VerticalAlignment="Top" Width="40"/>


        <!-- Character 2 -->
        <Rectangle x:Name="Character2"
                   Tag="Character"
                   Margin="190,60,530,200"
                   Fill="Blue"
                   >


            <Rectangle.ContextMenu>
                <ContextMenu>
                    <MenuItem Tag="Character2" Header="Show Character Details" Click="Show_Character_Click"/>
                    <MenuItem Tag="Character2" Header="List Abilities" Click="Show_Character_Click"/>
                    <MenuItem Tag="Character2" Header="Change Colour" Click="Show_Character_Click"/>
                </ContextMenu>
            </Rectangle.ContextMenu>
        </Rectangle>

        <Rectangle x:Name="Character2_Identifier" HorizontalAlignment="Left" Height="21" Margin="210,34,0,0" Stroke="Black" VerticalAlignment="Top" Width="40"/>


        <!-- Character 3 -->
        <Rectangle x:Name="Character3"
                   Tag="Character"
                   Margin="530,60,190,199"
                   Fill="Blue"
                   >

            <Rectangle.ContextMenu>
                <ContextMenu>
                    <MenuItem Tag="Character3" Header="Show Character Details" Click="Show_Character_Click"/>
                    <MenuItem Tag="Character3" Header="List Abilities" Click="Show_Character_Click"/>
                    <MenuItem Tag="Character3" Header="Change Colour" Click="Show_Character_Click"/>
                </ContextMenu>
            </Rectangle.ContextMenu>
        </Rectangle>

        <Rectangle x:Name="Character3_Identifier" HorizontalAlignment="Left" Height="21" Margin="550,34,0,0" Stroke="Black" VerticalAlignment="Top" Width="40"/>


        <!-- Text Boxes -->
        <TextBlock Name="InfoBox" HorizontalAlignment="Center" Height="244" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="156" Margin="0,104,0,0"/>
        <TextBlock Name="Heading_Info_Box" HorizontalAlignment="Center" Height="65" Margin="0,34,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="156" TextAlignment="Center" FontSize="24" FontWeight="Bold"/>
    </Grid>
</Window>
